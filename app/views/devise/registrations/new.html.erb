<div class="signup">
  <div class="mainbox col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">
          <h1><strong><%= t("sign-up") %></strong></h1>
        </div>
      </div>
      <div class="panel-body">
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name),
          html: {class: "form-horizontal", role: "form"} do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :name, t("signup.name"), class: "col-md-2 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true, class: "form-control",
                placeholder: t("signup.name") %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, t("signup.email") ,class: "col-md-2 control-label" %>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true, class: "form-control",
                placeholder: t("signup.email") %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, t("signup.password") ,class: "col-md-2 control-label", id: "pw-field" %>
            <div class="col-md-9">
              <% if @minimum_password_length %>
                <em class="small">
                  <%= t "signup.minimum" %><%= @minimum_password_length %>
                  <%= t "signup.characters" %>
                </em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off",
                class: "form-control", placeholder: t("signup.password") %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, t("signup.confirmation") ,class: "col-md-2 control-label" %>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "off",
                class: "form-control", placeholder: t("signup.password-confirmation") %>
            </div>
          </div>
          <div class="form-group">
            <div class="signup-button col-md-6">
              <%= f.submit t("sign-up"), class: "btn btn-info col-md-offset-9" %>
            </div>
            <div class="cancel-button col-md-offset-6">
              <%= link_to t("cancel"), cancel_user_registration_path, class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
